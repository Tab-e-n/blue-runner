func mod_modify():
	var savefile = File.new()
	var temp = {}
	
	temp[\"mod_name\"] = $GUI/mod/name.text
	temp[\"creator\"] = $GUI/mod/author.text
	temp[\"description\"] = $GUI/mod/description.text
	#temp[\"dependencies\"]
	
	savefile.open(\"mod.dat\", File.WRITE)
	savefile.store_line(to_json(temp))
	savefile.close()

